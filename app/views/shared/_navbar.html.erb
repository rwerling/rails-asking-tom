<div class="burger-menu">
  <div class="logo">
  <%= image_tag "ask_tom_logo.png" %>
  </div>
  <input id="menu-toggle" type="checkbox" />
  <label class="menu-btn" for="menu-toggle">
    <span></span>
  </label>

  <ul class="menubox">
          <% if user_signed_in? %>
          <li class="menuitem" onclick="this.querySelector('a').click(); return true;"> <%= link_to "My decisions", decisions_path %> </li>
          <li class="menuitem" onclick="this.querySelector('a').click(); return true;"> <%= link_to "New decision", new_decision_path %> </li>
          <li class="menuitem" onclick="this.querySelector('a').click(); return true;"> <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete} %> </li>
          <% else %>
          <li class="menuitem" onclick="this.querySelector('a').click(); return true;"> <%= link_to "Login", new_user_session_path %> </li>
          <% end %>
  </ul>
</div>
