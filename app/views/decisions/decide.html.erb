<div class="container">
  <div class="mytable card">
    <h1>And The Winner Is !!!</h1>
    <h2><%= @decision.decision_name %></h2>
    <p><%= @winner.option_name %></p>
  </div>

  <div class="mytable bg-mint p-3">
    <p><%= @decision.decision_name %></p>
    <table class="table mb-0 p-3">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Pro/Con</th>
          <th scope="col">Score</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th scope="row">1</th>
          <td><%= @winner.option_name %></td>
          <td><%= @winner.score %></td>

        </tr>
        <tr>
          <th scope="row">2</th>
          <td>Jacob</td>
          <td>6</td>

        </tr>
        <tr>
          <th scope="row">3</th>
          <td>Larry the Bird</td>
          <td>8</td>
        </tr>
      </tbody>
    </table>
  </div>


  <button type="button" class="btn btn-outline-success">Congratulations</button>
</div>
